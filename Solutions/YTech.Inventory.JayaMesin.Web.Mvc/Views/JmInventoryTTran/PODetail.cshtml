@(Html.Kendo().Window()
    .Name("WindowPODetail")
    .Title("Daftar Barang PO")
     .Content(@<text>@Html.Partial("PODetailContent")</text>)
    .Draggable()
    .Resizable()
    .Width(450)
    .Height(480)
    .Modal(true)
    .Visible(false)
    .Events(ev => ev.Close("onClose"))
)

<script type="text/javascript">
    function OpenPODetailContent() {
        $("#WindowPODetail").data("kendoWindow").center();
        $("#WindowPODetail").data("kendoWindow").open();
        //$("#showExpiredWO").hide();

        //reload grid when cancel clicked
        var grid = $("#GridPODetail").data("kendoGrid");
        grid.dataSource.read();
    }
</script>
