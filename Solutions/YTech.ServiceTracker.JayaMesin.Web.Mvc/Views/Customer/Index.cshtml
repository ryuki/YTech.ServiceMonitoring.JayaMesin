@{
    ViewBag.Title = "Master Konsumen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@(Html.Kendo()
.Grid<YTech.ServiceTracker.JayaMesin.Web.Mvc.Controllers.ViewModels.CustomerViewModel>()
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.CustomerName).Width(100);
        columns.Bound(p => p.CustomerPhone).Width(100);
        columns.Bound(p => p.CustomerAddress).Width(100); 
        columns.Command(command => { command.Edit(); command.Destroy(); }).Width(160);
    })
    .ToolBar(toolbar => { toolbar.Create(); })
    .Editable(editable => editable.Mode(GridEditMode.PopUp))
    .Pageable()
    .Sortable()
    .Scrollable()
    .ColumnMenu()
    .Selectable()
    .Filterable()
    .Groupable()
    .Resizable(resize => resize.Columns(true))
    .Reorderable(reorder => reorder.Columns(true))
    .HtmlAttributes(new { style = "height:430px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Events(events => events.Error("error_handler"))
        .Model(model => model.Id(p => p.CustomerID))
        .Create(create => create.Action("Customers_Create", "Customer"))
        .Read(read => read.Action("Customers_Read", "Customer"))
        .Update(update => update.Action("Customers_Update", "Customer"))
        .Destroy(destroy => destroy.Action("Customers_Destroy", "Customer"))

    )
)


